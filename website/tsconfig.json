  "compilerOptions": {
    "outDir": "build",
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2022",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "cypress",
    "dist",
    "build"
  ]
}
