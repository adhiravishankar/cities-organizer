{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2022",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": ".",
      "strictNullChecks": true,
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "include": [
        "src/**/*"
    ]
}
